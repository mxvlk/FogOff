<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/dark_theme_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim_light</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Fogapp</item>
    </style>


    <style name="Theme.Fogapp" parent="android:Theme.Material.Light.NoActionBar">
    </style>

</resources>